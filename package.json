{
	"name": "cli-intro",
	"version": "1.0.2",
	"description": "My first CLI app built with Node.js x TypeScript",
	"main": "src/index.ts",
	"homepage": "https://leohuynh.dev",
	"type": "module",
	"repository": {
		"type": "git",
		"url": "https://github.com/hta218/cli-intro"
	},
	"scripts": {
		"dev": "tsc -w",
		"start": "node dist/index.js",
		"build": "esbuild src/index.ts --bundle --platform=node --target=node18 --outfile=dist/index.js",
		"publish": "npm run build && npm publish --access public",
		"link": "npm unlink cli-intro && chmod +x ./dist/index.js && npm link cli-intro"
	},
	"bin": {
		"cli-intro": "./dist/index.js"
	},
	"keywords": [],
	"author": "Leo Huynh @ https://leohuynh.dev",
	"license": "ISC",
	"devDependencies": {
		"@types/node": "^20.7.0",
		"esbuild": "0.19.3",
		"typescript": "^5.2.2"
	},
	"dependencies": {
		"commander": "^11.0.0",
		"enquirer": "^2.4.1"
	}
}